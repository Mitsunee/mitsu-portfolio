---
import Document from "./Document.astro";
import type { PageMeta } from "~/types/meta";

type Props = PageMeta;
---

<Document {...Astro.props}>
  <header>
    <a href="/" title="Mitsunee">
      <img src="/assets/icons/icon.svg" alt="Mitsunee" />
    </a>
  </header>
  <main id="content"><slot /></main>
</Document>

<style is:global>
  body > header {
    background-color: var(--dark);
    width: 100%;
    height: var(--bar-height);
    display: flex;
    align-items: center;
    padding: 0px 1rem;

    & a {
      display: block;
      width: var(--icon-size);
      height: var(--icon-size);

      & img {
        width: 100%;
        height: 100%;
        object-fit: contain;
      }
    }
  }

  body > main {
    display: flex;
    flex-flow: column nowrap;
    margin: auto;
    padding-top: 1rem;
    padding-bottom: 3rem;
    min-height: calc(100vh - var(--bar-height));
    width: 100%;
  }
</style>
